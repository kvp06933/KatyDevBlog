@model IEnumerable<KatyDevBlog.Models.BlogPost>
@inject IImageService _imageService
@using KatyDevBlog.Services.Interfaces
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadyStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-fluid" src="@_imageService.DecodeImage(item.ImageData, item.ImageType)" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReadyStatus)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>



                <td>
                    @Html.Raw(item.Content)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
