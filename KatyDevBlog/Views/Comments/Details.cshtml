@model KatyDevBlog.Models.Comment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Updated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Updated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CommentBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommentBody)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Moderated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moderated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeratedBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModeratedBody)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModerationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModerationType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogPost.Abstract)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BlogUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BlogUser.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Moderator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moderator.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <h2>Add A Comment</h2>
        <div class="col-6">
            <form asp-controller="Comments" asp-action="Create">
                <div class="form-group">
                    <input type="hidden" name="BlogPostId" value="@Model.Id" />
                    <div class="form-group">
                        <textarea asp-for="CommentBody" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="CommentBody" class="text-danger"></span>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col text-center">
            <a class="btn btn-lg btn-dark w-50" returnUrl="/BlogPosts/Details/@Model.BlogPostId"asp-area="Identity" asp-page="/Account/Login">Login to add a comment!</a>
        </div>
    </div>
}